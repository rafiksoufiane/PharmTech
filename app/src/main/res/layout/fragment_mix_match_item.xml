<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/text_view_item_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_view_item_context"
        android:text="@string/drug_name"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/subtitle_text"/>

    <TextView
        android:id="@+id/text_view_item_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/imageView_checked"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/text_view_item_name"
        android:text="@string/medicine_name_textview"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/title_text"/>

    <ImageView
        android:id="@+id/imageView_checked"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icn_correct"/>


</RelativeLayout>
